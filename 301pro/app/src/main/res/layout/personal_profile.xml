<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#123"
    >
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:layout_marginTop="20dp"
        android:text="Personal Profile"
        android:gravity="center"
        android:textColor="#fff"
        android:id="@+id/title_profile"
        ></TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/title_profile"
        android:weightSum="3"
        android:layout_marginTop="30dp"
        android:id="@+id/profile_bar"
        >
        <Button
            android:id="@+id/user_self_login"
            android:layout_weight="1.01"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:background="@drawable/circle_shape"
            android:drawableBottom = "@drawable/ic_account_circle_blackfix_24dp"
            android:layout_marginTop="20dp"
            />

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3"
            >

            <TextView
                android:id="@+id/user_name_display"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Shanzhi Zhang"
                android:layout_weight="2"
                android:textSize="40dp"
                android:textColor="#FFF"
                android:gravity="bottom"
                >
            </TextView>
            <TextView
                android:id="@+id/user_email_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sXXXXX@ual.ca"
                android:layout_weight="0.5"
                android:textSize="20dp"
                android:textColor="#FFF"
                android:gravity="bottom"
                >
            </TextView>
            <TextView
                android:id="@+id/phone_num_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="587XXXXXXX"
                android:layout_weight="0.5"
                android:textSize="20dp"
                android:textColor="#FFF"
                >
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/edit_profile"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/profile_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Edit Profile"
        android:textSize="25dp"
        >
    </Button>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/edit_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Back"
        android:textSize="25dp"
        >
    </Button>
</RelativeLayout>