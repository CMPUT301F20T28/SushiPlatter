<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/book"
    >
    <!--在文件夹drawable中导入图片booklogo 后续也是从res/drawable文件夹中调取图片等-->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginTop="70dp"
        app:srcCompat="@drawable/booklogo"
        />

    <EditText
        android:id="@+id/text_username"
        android:gravity="center"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/logo"
        android:layout_marginTop="70dp"
        android:layout_centerInParent="true"
        android:background="@drawable/login_register_editviewshape"
        android:drawableLeft="@drawable/user"
        android:hint="Username"
        />

    <EditText
        android:id="@+id/text_password"
        android:gravity="center"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/text_username"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:inputType="textPassword"
        android:background="@drawable/login_register_editviewshape"
        android:drawableLeft="@drawable/lock"
        android:hint="Password"
        />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/text_password"
        android:layout_centerInParent="true"
        android:text="Login"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_below="@id/btn_login"
        android:layout_centerInParent="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Registered? "
            android:textColor="#ffffff"
            />
        <TextView
            android:id="@+id/textview_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textColor="#123"
            android:text="Register"
            />

    </LinearLayout>

    <TextView
        android:layout_below="@id/btn_login"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Need Help"
        android:layout_marginTop="40dp"
        android:textColor="#ffffff" />

    <Switch
        android:id="@+id/show_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_username"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/text_password"
        />

</RelativeLayout>