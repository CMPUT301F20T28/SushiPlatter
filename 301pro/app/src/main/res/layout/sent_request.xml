<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/book"
    >
    <!--在文件夹drawable中导入图片booklogo 后续也是从res/drawable文件夹中调取图片等-->
    <ImageView
        android:id="@+id/book_pic"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginTop="70dp"
        app:srcCompat="@drawable/booklogo"
        />

    <Button
        android:id="@+id/sent_request"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:layout_below="@id/book_pic"
        android:layout_centerInParent="true"
        android:text="Sent A Request"
        />

    <Button
        android:id="@+id/back_sent_request"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/sent_request"
        android:layout_centerInParent="true"
        android:text="Back"
        />




</RelativeLayout>