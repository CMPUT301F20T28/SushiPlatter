<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="4"
    android:background="@drawable/round_item"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.6"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/book_image_share"
            android:layout_width="match_parent"
            android:layout_height="100dp">

        </ImageView>

        <TextView
            android:id="@+id/name_text_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp" />


    </LinearLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/des_text_share"
        android:layout_width="0dp"
        android:layout_weight="1.7"
        android:layout_height="match_parent"
        android:textSize="10dp"></TextView>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.9"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/status_text_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="45dp"
            android:layout_weight="0.7"
            android:hint="A"
            >
        </TextView>

        <TextView
            android:id="@+id/borrower_text_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:hint="Borrower Name"
            >
        </TextView>


    </LinearLayout>


</LinearLayout>