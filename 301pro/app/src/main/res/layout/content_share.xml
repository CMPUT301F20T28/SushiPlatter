<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="4"
    android:background="@drawable/round_item" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1.4"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/book_image_share"
            android:layout_width="match_parent"
            android:layout_height="100dp">

        </ImageView>

        <TextView
            android:id="@+id/name_text_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="8dp"
            android:autoSizeMaxTextSize="26dp"
            android:autoSizeStepGranularity="2dp" />

    </LinearLayout>

    <TextView
        android:layout_marginHorizontal="10dp"
        android:id="@+id/des_text_share"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.7"
        android:textSize="15sp" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.9"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/status_text_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            android:textSize="15sp"></TextView>

        <TextView
            android:id="@+id/borrower_text_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:hint="Borrower Name">
        </TextView>
    </LinearLayout>


</LinearLayout>