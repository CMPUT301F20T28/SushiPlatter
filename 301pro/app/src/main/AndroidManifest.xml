<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.a301pro">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key">
        </meta-data>

        <activity android:name=".SetMapActivity" />
        <activity android:name=".ViewMapActivity" />

        <activity android:name=".ViewRequestSender"/>
        <activity android:name=".MessageCenterIntent"/>
        <activity android:name=".ViewUserProfile" />
        <activity
            android:name=".AddEditIntent"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SentRequestIntent"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ScanISBN"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Register"
            android:parentActivityName=".Login" />
        <activity
            android:name=".MainActivity"
            android:parentActivityName=".Login" />
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CaptureAct"
            android:screenOrientation="fullSensor"
            android:stateNotNeeded="true"
            android:windowSoftInputMode="stateAlwaysHidden" />
    </application>

</manifest>